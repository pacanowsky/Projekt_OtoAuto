@model VehiclePortal.Models.Listing

@{
    ViewData["Title"] = "Usuń Ogłoszenie";
}

<h2>Usuń Ogłoszenie</h2>

<p>Czy na pewno chcesz usunąć to ogłoszenie?</p>

<div>
    <h3>@Model.Title</h3>
    <p><strong>Kategoria:</strong> @(Model.Category != null ? Model.Category.Name : "Brak kategorii")</p>
    <p><strong>Cena:</strong> @Model.Price.ToString("C")</p>
    <p><strong>Opis:</strong> @Model.Description</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Usuń</button>
    <a asp-action="MyListings" class="btn btn-secondary">Anuluj</a>
</form>
