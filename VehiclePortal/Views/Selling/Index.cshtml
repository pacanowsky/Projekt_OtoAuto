@{
    ViewData["Title"] = "Rozpocznij Sprzedaż";
}

<div class="container my-5 p-5" style="background-color: #f0f8ff;">
    <div class="row align-items-center">
        <!-- Sekcja z obrazem po lewej stronie -->
        <div class="col-md-6">
            <img src="/images/selling.png" alt="Ilustracja ogłoszeń" class="img-fluid" style="max-width: 100%; height: auto;">
        </div>

        <!-- Sekcja z tekstem i przyciskiem po prawej stronie -->
        <div class="col-md-6">
            <h2 class="font-weight-bold">Publikowanie ogłoszeń na OTOAUTO</h2>
            <p class="mb-4">Dodaj ogłoszenie o pojeździe lub części i sprzedaj w ciągu 2-4 tygodni.</p>

            <!-- Przycisk do tworzenia ogłoszenia -->
            <a href="@Url.Action("Create", "Selling")" class="btn btn-primary mb-4" style="font-size: 1.2rem;">Stwórz ogłoszenie</a>

            <!-- Lista korzyści -->
            <ul class="list-unstyled">
                <li class="d-flex align-items-start mb-2">
                    <i class="bi bi-check-circle-fill text-primary mr-2"></i>
                    <span style="margin-left: 15px">Najlepsza strona w Polsce poświęcona motoryzacji</span>
                </li>
                <li class="d-flex align-items-start mb-2">
                    <i class="bi bi-check-circle-fill text-primary mr-2"></i>
                    <span style="margin-left: 15px">Ponad 1 000 000 użytkowników każdego dnia</span>
                </li>
                <li class="d-flex align-items-start mb-2">
                    <i class="bi bi-check-circle-fill text-primary mr-2"></i>
                    <span style="margin-left: 15px">Eksperckie narzędzia i porady, które pomogą Ci sprzedać szybciej</span>
                </li>
            </ul>
        </div>
    </div>
</div>

<!-- Sekcja z listą kontrolną -->
<div style="max-width: 900px; margin: auto; padding: 2rem 0;">
    <h3 style="font-size: 1.5rem; font-weight: bold; margin-bottom: 1rem;">Przydatna lista kontrolna przed utworzeniem ogłoszenia</h3>
    <div style="display: flex; flex-wrap: wrap; gap: 1rem;">

        <!-- Lewa kolumna -->
        <div style="flex: 1; min-width: 250px;">
            <div style="display: flex; align-items: center; margin-bottom: 1rem;">
                <img src="/icons/registration.png" alt="Ikona rejestracji" style="width: 24px; height: 24px; margin-right: 10px;">
                <span>1. Weź swój dowód rejestracyjny</span>
            </div>
            <div style="display: flex; align-items: center; margin-bottom: 1rem;">
                <img src="/icons/mileage.png" alt="Ikona przebiegu" style="width: 24px; height: 24px; margin-right: 10px;">
                <span>2. Zapisz przebieg pojazdu</span>
            </div>
            <div style="display: flex; align-items: center; margin-bottom: 1rem;">
                <img src="/icons/valuation.png" alt="Ikona wyceny" style="width: 24px; height: 24px; margin-right: 10px;">
                <span>3. Wycena pojazdu za pomocą naszego bezpłatnego narzędzia</span>
            </div>
        </div>

        <!-- Prawa kolumna -->
        <div style="flex: 1; min-width: 250px;">
            <div style="display: flex; align-items: center; margin-bottom: 1rem;">
                <img src="/icons/cleaning.png" alt="Ikona czyszczenia" style="width: 24px; height: 24px; margin-right: 10px;">
                <span>4. Wyczyszczenie samochodu zarówno wewnątrz, jak i na zewnątrz</span>
            </div>
            <div style="display: flex; align-items: center; margin-bottom: 1rem;">
                <img src="/icons/photos.png" alt="Ikona zdjęć" style="width: 24px; height: 24px; margin-right: 10px;">
                <span>5. Zrób zdjęcia z różnych kątów</span>
            </div>
            <div style="display: flex; align-items: center; margin-bottom: 1rem;">
                <img src="/icons/ready.png" alt="Ikona gotowości" style="width: 24px; height: 24px; margin-right: 10px;">
                <span>6. Jesteś gotowy do stworzenia ogłoszenia</span>
            </div>
        </div>

    </div>
</div>

<!-- Dodanie Bootstrap Icons (opcjonalnie) -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css">
