                }
                else
                {
                    <img src="@listing.StaticImagePath" class="card-img-top" alt="Placeholder Image" style="height: 200px; object-fit: cover;" />
                }

                <div class="card-body">
                    <h5 class="card-title text-primary">@listing.Title</h5>
                    <p class="card-text">@listing.Description</p>
                    <p class="font-weight-bold">Cena: @string.Format("{0:N2} zł", listing.Price)</p>
                    <a href="@Url.Action("Details", "Home", new { id = listing.Id })" class="btn btn-outline-primary w-100 mt-2">Zobacz szczegóły</a>
                </div>
            </div>
        </div>
    }
</div>
